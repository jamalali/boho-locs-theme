/*================ Layout ================*/
/*============================================================================*/
.flexbox-container {
  display: flex;
}
.col {
  flex: 50%;
}
.feature-article  {
  min-height: 1900px;
  text-align: center;
}
.feature-article .section-title {
  color: #8a85cd;
  font-size: 24px;
  font-weight: 700;
  line-height: 18px;
  text-transform: uppercase;
}
.feature-article h3.section-subtitle {
  color: #000000;
  font-family: "Louize Display";
  font-size: 62px;
  line-height: 78px;
}
.feature-article .article-heading {
  color: #000000;
  font-family: "Louize Display";
  font-size: 24px;
  line-height: 42px;
  max-width: 914px;
  margin: auto;
}
.feature-article .article-container {
  position: relative;
}
.feature-article article.quote,
.feature-article article.tl,
.feature-article article.tr,
.feature-article article.bl,
.feature-article article.br {
  position: absolute;
}

.article-container article.tl {
  left: 80px;
}
