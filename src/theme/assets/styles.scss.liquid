/*================ Media Queries for Desktop ================*/
/*============================================================================*/
@media only screen and (max-width: 740px) {
  .desktop {
    display: none;
  }
}
/*================ Media Queries for Mobile ================*/
/*============================================================================*/
@media only screen and (min-width: 741px) {
  .mobile {
    display: none;
  }
}
/*================ Media ================*/
/*============================================================================*/
.video-responsive{
    overflow:hidden;
    padding-bottom:56.25%;
    position:relative;
    height:0;
}
.video-responsive iframe{
    left:0;
    top:0;
    height:100%;
    width:100%;
    position:absolute;
}

