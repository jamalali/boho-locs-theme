/*================ Typography ================*/
/*============================================================================*/
.section-title {
  text-align: left;
  color: #93a0ee;
  font-family: "GT America Condensed";
  font-size: 24px;
  font-weight: 700;
  letter-spacing: 0.05px;
  line-height: 30px;
  text-transform: uppercase;
}
.bestseller-caption {
  color: #000000;
  font-family: "GT America Condensed";
  font-size: 22px;
  font-weight: 700;
  line-height: 20px;
  text-transform: uppercase;
}
.product-title {
  color: #000000;
  font-family: "GT America Condensed";
  font-size: 12px;
  font-weight: 700;
  letter-spacing: 0.03px;
  line-height: 1.4;
  text-transform: uppercase;
}
.product-price__price {
  font-weight: 600;
  background: black;
  color: #fff;
  float: right;
  font-size: 12px;
  letter-spacing: 0.04px;
  font-family: "GT America Condensed";
  padding: 5px;
  position: relative;
  right: -1px;
}
body.template-search .section-title {
  color: #000000;
  font-family: "GT America Condensed";
  font-size: 42px;
  font-weight: 700;
  text-transform: uppercase;
  text-align: left;
}
.search-bar__submit, .search-header__submit {
  top: -15px;
}
/*================ Misc ================*/
/*============================================================================*/
.homepage-featured-collection .product-price__price {
  display: none;
}

.bx-wrapper {
  box-shadow: none;
  padding: 0;
  margin: 0;
}
body.template-search .index-section {
  padding-bottom: 0;
  padding-top: 0;
}
body.template-search main form.search input,
body.template-search main form.search input:focus,
body.template-search main form.search input:active {
  outline: none;
  background: transparent;
  border: none;
  border-bottom: solid 1px #000;
  color: #000000;
  font-family: "Louize Display";
  font-size: 54px;
  line-height: 54px;
  text-align: center;
}
