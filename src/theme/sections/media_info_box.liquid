<div class="section__inner">

  <header class="media-info-box__header">

    {% if section.settings.sub_heading != blank %}
      <h3 class="media-info-box__sub_heading">
          {{ section.settings.sub_heading }}
      </h3>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h2 class="media-info-box__heading">
          {{ section.settings.heading }}
      </h2>
    {% endif %}
  </header>

  <main class="media-info-box__main-area">

    <div class="media-info-box__video-area">
        <a href="{% if section.settings.link != blank %}{{ section.settings.link }}{% else %}#{% endif %}">

            {% if section.settings.image != blank %}
              <img src="{{ section.settings.image | img_url: '500x' }}" alt="{{ section.settings.image_title }}" />
            {% endif %}

            {% if section.settings.show_play == true %}
                <button class="button button--play">
                    {% render 'icon_play' %}
                </button>
            {% endif %}

        </a>
    </div>

    <div class="media-info-box__text-area">

      {% if section.settings.image_title != blank %}
        <h4 class="media-info-box__title">
            {{ section.settings.image_title }}
        </h4>
      {% endif %}

      {% if section.settings.description != blank %}
        <p class="media-info-box_description">
            {{ section.settings.description }}
        </p>
      {% endif %}
    </div>
    
  </main>

</div>

{% schema %}
  {
    "name": "Media Info Box",
    "class": "section section--media-info-box",
    "tag": "section",
    "settings": [
        {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "sub_heading",
        "label": "Sub heading"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "image_title",
        "label": "Image Title"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description"
      },
      {
        "id": "link",
        "type": "url",
        "label": "Link"
      },
      {
        "type": "checkbox",
        "id": "show_play",
        "default": true,
        "label": "Show play button"
      }
    ],
    "presets": [
      {
        "name": "Media Info Box",
        "category": "Boho Sections"
      }
    ]
  }
{% endschema %}