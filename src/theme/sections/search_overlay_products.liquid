<div class="featured-products-area">

    <h2 class="featured-products__heading">
        {{ section.settings.featured_products_heading }}
    </h2>

    <div class="featured-products__list slick-slider" data-slick='{
            "centerMode": true,
            "centerPadding": "24px",
            "arrows": false,
            "infinite": false,
            "mobileFirst": true,
            "responsive": [
                {
                    "breakpoint": 767,
                    "settings": "unslick"
                }
            ]
        }'>

        {% for block in section.blocks %}
            {% if block.type == 'featured_products' %}

                {% render 'block--product',
                    product             : all_products[block.settings.product],
                    block_attributes    : block.shopify_attributes
                %}

            {% endif %}
        {% endfor %}

    </div>

</div>

{% schema %}
  {
    "name": "Search Overlay - Products",
    "class": "section--search-overlay-products",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "featured_products_heading",
        "label": "Featured Products Heading"
      }
    ],
    "blocks": [
      {
        "type": "featured_products",
        "name": "Featured Products",
        "settings": [
          {
            "id": "product",
            "type": "product",
            "label": "Product"
          }
        ]
      }
    ]
  }
{% endschema %}