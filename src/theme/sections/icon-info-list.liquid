<section class="section section--icon-info-list" style="background-color: {{ section.settings.bg_color }};">

    <div class="icon-info-list__items">
        {% for block in section.blocks %}
            <div class="icon-info-list__item-area" {{ block.shopify_attributes }}>
                <img src="{{ block.settings.icon | img_url: '500x' }}" alt="{{ block.settings.info }}" class="icon-info-list__icon" />
                <p class="icon-info-list__info" style="color: {{ section.settings.text_color }};">
                    {{ block.settings.info }}
                </p>
            </div>
        {% endfor %}
    </div>

</section>

{% schema %}
  {
    "name": "Icon Info List",
    "settings": [
    {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#000"
    },
    {
        "type": "color",
        "id": "text_color",
        "label": "Text Color",
        "default": "#fff"
    }
    ],
    "blocks": [
      {
        "type": "item",
        "name": "Item",
        "settings": [
          {
            "id": "icon",
            "type": "image_picker",
            "label": "Icon"
          },
          {
            "id": "info",
            "type": "text",
            "label": "Info"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Icon Info List",
        "category": "Boho Sections"
      }
    ]
  }
{% endschema %}