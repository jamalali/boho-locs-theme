{% if section.settings.heading != blank %}
  <h2 class="featured-products__heading">
    {{ section.settings.heading }}
  </h2>
{% endif %}

<div class="featured-products__list slick-slider" data-slick='{
        "centerMode": true,
        "centerPadding": "24px",
        "arrows": false,
        "infinite": false,
        "mobileFirst": true,
        "responsive": [
            {
                "breakpoint": 767,
                "settings": "unslick"
            }
        ]
    }'>
    {% for block in section.blocks %}

        {% render 'block--product',
            product             : all_products[block.settings.product],
            block_attributes    : block.shopify_attributes,
            hide_price          : true
        %}

    {% endfor %}
</div>

{% schema %}
  {
    "name": "Featured Products",
    "class": "section--featured-products section--blue",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }
    ],
    "blocks": [
      {
        "type": "products",
        "name": "Products",
        "settings": [
          {
            "id": "product",
            "type": "product",
            "label": "Product"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Featured Products",
        "category": "Boho Sections"
      }
    ]
  }
{% endschema %}