<div class="featured-page__content">

    {% if section.settings.heading != blank %}
        <h2 class="featured-page__heading">
        {{ section.settings.heading }}
        </h2>
    {% endif %}

    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="button button--transparent featured-page__cta"">
        {{ section.settings.button_label }}
        </a>
    {% endif %}

</div>


<style>
    {% if section.settings.image != blank %}
        #shopify-section-{{ section.id }}.section--featured-page {
            background-image: url('{{ section.settings.image | img_url: '1920x' }}');
        }
    {% endif %}

    #shopify-section-{{ section.id }}.section--featured-page .featured-page__heading {
        color: {{ section.settings.text_color }};
    }

  #shopify-section-{{ section.id }}.section--featured-page .featured-page__cta {
    color: {{ section.settings.text_color }};
    border-color: {{ section.settings.text_color }};
  }
  #shopify-section-{{ section.id }}.section--featured-page .featured-page__cta:hover {
    {% assign text_color_brightness = section.settings.text_color | color_brightness %}
    {% if text_color_brightness > 127.5 %}
      color: #000;
    {% else %}
      color: #fff;
    {% endif %}
    background: {{ section.settings.text_color }};
  }
</style>

{% schema %}
  {
    "name": "Featured Page",
    "class": "section--featured-page",
    "tag": "section",
    "settings": [
        {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color",
        "default": "#fff"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "presets": [
      {
        "name": "Featured Page",
        "category": "Boho Sections"
      }
    ]
  }
{% endschema %}