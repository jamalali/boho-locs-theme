{% if section.settings.lc_blog != blank %}

  {%- assign blog = blogs[section.settings.lc_blog] -%}
  {% include 'single-post' %}

{%- elsif section.settings.lc_blog == blank and section.settings.lc_col_img != blank -%}

  {%- assign img = section.settings.lc_col_img -%}
  {%- include 'col-full-image' -%}

{%- elsif section.settings.blog == blank and section.settings.lc_col_img == blank -%}

  {%- assign article_heading = section.settings.lc_article_heading -%}
  {%- assign article_button_link = section.settings.lc_article_button_link -%}
  {%- assign article_button_text = section.settings.lc_article_button_text -%}
  {%- include 'col-textarea' -%}

{%- endif -%}
