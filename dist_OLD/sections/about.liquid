<section class="about">

    {% for block in section.blocks %}
        {% capture snippetName %}landing-block-{{ block.type }}{% endcapture %}
        {% include snippetName %}
    {% endfor %}

</section>


{% schema %}
{
    "name":"About page",
    "blocks":[
        {
            "type":"intro",
            "name":"Introduction",
            "limit": 1,
            "settings":[
                {
                    "type":"image_picker",
                    "id":"intro_image",
                    "label":"Image",
                    "info": "1280px x 1080px"
                },
                {
                    "type":"text",
                    "id":"intro_title",
                    "label":"Title"
                },
                {
                    "type":"richtext",
                    "id":"intro_text",
                    "label":"Text"
                }
            ]
        },
        {
            "type":"section",
            "name":"Section",
            "settings":[
                {
                    "type":"image_picker",
                    "id":"section_image",
                    "label":"Image"
                },
                {
                    "type":"image_picker",
                    "id":"section_secondary_image",
                    "label":"Secondary image (optional)"
                },
                {
                    "type":"checkbox",
                    "id":"portrait_image",
                    "default":false,
                    "label":"Portrait image"
                },
                {
                    "type":"text",
                    "id":"section_title",
                    "label":"Title"
                },
                {
                    "type":"richtext",
                    "id":"section_text",
                    "label":"Text"
                },
                {
                    "type":"select",
                    "id":"section_alignment",
                    "label":"Section alignment",
                    "default":"image_left",
                    "options":[
                        {
                            "value":"image_left",
                            "label":"Image on the left"
                        },
                        {
                            "value":"image_right",
                            "label":"Image on the right"
                        }
                    ]
                },
                {
                    "type":"select",
                    "id":"section_text_alignment",
                    "label":"Text alignment",
                    "default":"center",
                    "options":[
                        {
                            "value":"center",
                            "label":"Center"
                        },
                        {
                            "value":"top",
                            "label":"Top"
                        },
                        {
                            "value":"bottom",
                            "label":"Bottom"
                        }
                    ]
                },
                {
                    "type":"checkbox",
                    "id":"add_box_shadow",
                    "default":false,
                    "label":"Add box shadow to image"
                }
            ]
        }
    ]
}
{% endschema %}
