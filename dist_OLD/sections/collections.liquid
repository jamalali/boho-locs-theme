{%- assign collection_page = true -%}

{%- assign collection = collections[section.settings.collection] -%}

{% capture img_id %}ProductCardImage-{{ section.id }}-{{ product.id }}{% endcapture %}

{%- assign img_url = product.featured_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}

<section class="collections flex--row justify--between">
  <div class="filters">

    {%- include 'item--tags' -%}

  </div>
  <div class="articles">

    {%- include 'collection--desktop' -%}

  </div>
</section>


{% schema %}
  {
    "name": "Collection",
      "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Heading",
        "default": "Featured collection"
      },
      {
         "type":      "select",
         "id":        "alignment",
         "label":     "Align Header",
         "options": [
           {
             "group": "value",
             "value": "left",
             "label": "Left"
           },
           {
             "group": "value",
             "value": "center",
             "label": "Center"
           },
           {
             "group": "value",
             "value": "right",
             "label": "Right"
           }
         ],
         "default":   "left",
         "info":      "Header Alignment"
      },
      {
        "id": "collection",
        "type": "collection",
        "label": "Collection"
      }
    ],
    "presets": [
      {
        "name": "Collection",
        "category": "Boho Sections"
      }
    ]
  }
{% endschema %}
