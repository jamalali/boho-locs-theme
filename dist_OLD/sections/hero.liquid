<section class="hero">
  
  {%- include 'hero-desktop' -%}

  {%- include 'hero-mobile' -%}

</section>

{% schema %}
  {
    "name": "Hero",
    "class": "index-section index-section--flush",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "image_picker",
        "id": "mobile_image",
        "label": "Mobile Image"
      },
      {
        "type": "text",
        "id": "year",
        "label": "Year",
        "default": "2020"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Image with text overlay"
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Title Color",
        "default": "#0f0"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Use overlay text to give your customers insight into your brand. Select imagery and text that relates to your style and story.</p>"
      },
      {
        "type": "select",
        "id": "hero_size",
        "label": "Section height",
        "default": "medium",
        "options": [
          {
            "label": "Extra Small",
            "value": "x-small"
          },
          {
            "label": "Small",
            "value": "small"
          },
          {
            "label": "Medium",
            "value": "medium"
          },
          {
            "label": "Large",
            "value": "large"
          },
          {
            "label": "Extra Large",
            "value": "x-large"
          }
        ]
      },
      {
        "type": "select",
        "id": "text_size",
        "label": "Text size",
        "default": "medium",
        "options": [
          {
            "label": "Medium",
            "value": "medium"
          },
          {
            "label": "Large",
            "value": "large"
          }
        ]
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "presets": [
      {
        "name": "Hero",
        "category": "Boho Sections"
      }
    ]
  }
{% endschema %}

{% comment %}
{
  "type": "select",
  "id": "alignment",
  "label": "Image alignment",
  "default": "center",
  "options": [
    {
      "value": "top",
      "label": "Top"
    },
    {
      "value": "center",
      "label": "Middle"
    },
    {
      "value": "bottom",
      "label": "Bottom"
    }
  ]
},
{% endcomment %}
