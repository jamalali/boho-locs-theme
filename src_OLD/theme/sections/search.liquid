{%- assign item_search = true -%}
<section
class="search__section flex--column"
style="background: {{ section.settings.section_bg }}
">

  {%- include 'search-form' -%}

  {% if search.results_count != 0 or search.performed != false %}

    <hr>

    {%- include 'section--title' -%}

    {%- include 'search-results' -%}

  {%- else -%}

    {%- include 'item--tags' -%}

  {% endif %}

</section>

{% schema %}
{
  "name": "Search Feature",
  "settings": [
    {
      "type": "color",
      "id": "section_bg",
      "label": "Section Background Color",
      "default": "#f00"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Results Header",
      "default": "Products"
    },
    {
       "type":      "select",
       "id":        "alignment",
       "label":     "Align Header",
       "options": [
         {
           "group": "value",
           "value": "left",
           "label": "Left"
         },
         {
           "group": "value",
           "value": "center",
           "label": "Center"
         },
         {
           "group": "value",
           "value": "right",
           "label": "Right"
         }
       ],
       "default":   "left",
       "info":      "Header Alignment"
    }
  ]
}
{% endschema %}
