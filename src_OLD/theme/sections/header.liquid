<section id="primary-header" class="header flex--row desktop">

  {%- include 'header-logo' -%}

  <nav class="menu flex--row">

    {% comment %}

      {%- include 'header-menu' -%}

    {% endcomment %}

  </nav>

  {%- include 'header-icons' -%}

</section>
<section id="primary-header" class="header flex--row mobile">

  {%- include 'header-menu' -%}

  {%- include 'header-logo' -%}

  {%- include 'header-icons' -%}

</section>

{% schema %}
  {
    "name": "Header",
    "max_blocks": 5,
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "text",
        "id": "logo_max_width",
        "label": "Custom logo width (in pixels)",
        "default": "100"
      }
    ],
    "blocks": [
      {
        "type": "link_list",
        "name": "Header Menu",
        "settings": [
          {
            "type": "text",
            "id": "menu_title",
            "label": "Menu Title",
            "default": "Menu Title"
          },
          {
            "type": "link_list",
            "id": "header_linklist",
            "label": "Primary menu",
            "default": "main-menu",
            "info": "This menu won't show dropdown items"
          }
        ]
      }
    ]
  }
{% endschema %}
