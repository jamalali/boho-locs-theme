{% include 'two-col-layout' %}

{% schema %}
  {
    "name": "Two Column Full",
    "settings": [
      {
        "type": "header",
        "content": "Left Column Styles"
      },
      {
        "type": "color",
        "id": "lc_font_color",
        "label": "Left Col Font Color",
        "default": "#000"
      },
      {
        "type": "color",
        "id": "lc_bg",
        "label": "Left Column Background",
        "default": "#f00"
      },
      {
        "type": "header",
        "content": "Left Column Blog Post"
      },
      {
        "id": "lc_blog",
        "type": "blog",
        "label": "Choose Blog Post ..."
      },
      {
        "type": "checkbox",
        "id": "lc_blog_show_author",
        "label": "Show author",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "lc_blog_show_date",
        "label": "Show date",
        "default": true
      },
      {
        "type": "header",
        "content": "Left Column Image"
      },
      {
        "type": "image_picker",
        "id": "lc_col_img",
        "label": "Select Image"
      },
      {
        "type": "header",
        "content": "Left Column Article"
      },
      {
        "type": "text",
        "id": "lc_article_heading",
        "label": "Article Heading",
        "default": "Article Heading"
      },
      {
        "type": "url",
        "id": "lc_article_button_link",
        "label": "Article Button Link"
      },
      {
        "type": "text",
        "id": "lc_article_button_text",
        "label": "Article Button Text",
        "default": "Button Text"
      },
      {
        "type": "header",
        "content": "Right Column Styles"
      },

      {
        "type": "color",
        "id": "rc_font_color",
        "label": "Right Column Font Color",
        "default": "#000"
      },
      {
        "type": "color",
        "id": "rc_bg",
        "label": "Right Column Background",
        "default": "#f00"
      },
      {
        "type": "header",
        "content": "Right Column Blog Post"
      },
      {
        "id": "rc_blog",
        "type": "blog",
        "label": "Choose Blog Post ..."
      },
      {
        "type": "checkbox",
        "id": "rc_blog_show_author",
        "label": "Show author",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "rc_blog_show_date",
        "label": "Show date",
        "default": true
      },
      {
        "type": "header",
        "content": "Right Column Image"
      },
      {
        "type": "image_picker",
        "id": "rc_col_img",
        "label": "Select Image"
      },
      {
        "type": "header",
        "content": "Right Column Article"
      },
      {
        "type": "text",
        "id": "rc_article_heading",
        "label": "Article Heading",
        "default": "Article Heading"
      },
      {
        "type": "url",
        "id": "rc_article_button_link",
        "label": "Article Button Link"
      },
      {
        "type": "text",
        "id": "rc_article_button_text",
        "label": "Article Button Text",
        "default": "Button Text"
      }
    ],
    "presets": [
      {
        "name": "Two Col Featured",
        "category": "Boho Sections"
      }
    ]
  }
{% endschema %}
