  font-weight: normal;
  font-style: normal; }

header.site-header .inner {
  display: flex;
  height: 42px;
  padding: 12px 18px 12px;
  background: #eef315; }
  header.site-header .inner .left-area {
    margin-right: 18px; }
  header.site-header .inner .logo-area .logo {
    width: 100px; }
  header.site-header .inner .right-area {
    flex-grow: 1;
    text-align: right; }
    header.site-header .inner .right-area .cart-link {
      margin-left: 18px; }

header.site-header.mobile-menu-open .mobile-menu-area {
  left: 0; }

header.site-header .mobile-menu-area {
  padding: 36px 24px 48px;
  background: #eef315;
  position: absolute;
  top: 0;
  width: 100%;
  left: -100%;
  transition: left .5s;
  z-index: 2; }
  header.site-header .mobile-menu-area .header {
    margin-bottom: 36px;
    display: flex; }
    header.site-header .mobile-menu-area .header .right-area {
      flex-grow: 1; }
    header.site-header .mobile-menu-area .header .options {
      text-align: right; }
      header.site-header .mobile-menu-area .header .options li {
        display: inline;
        margin-left: 12px; }
  header.site-header .mobile-menu-area .links a {
    display: block;
    line-height: 24px; }
  header.site-header .mobile-menu-area .links > .link-item {
    margin-bottom: 48px; }
    header.site-header .mobile-menu-area .links > .link-item > a {
      font-family: "GT America Condensed", sans-serif;
      text-transform: uppercase;
      font-size: 20px;
      margin-bottom: 12px; }
  header.site-header .mobile-menu-area .child-links > .link-item {
    border-bottom: solid 1px #000000;
    padding: 12px 0; }
    header.site-header .mobile-menu-area .child-links > .link-item.is-parent > a {
      position: relative; }
      header.site-header .mobile-menu-area .child-links > .link-item.is-parent > a .chevron {
        position: absolute;
        right: 0; }
    header.site-header .mobile-menu-area .child-links > .link-item > a {
      font-family: "GT America Condensed Bold", sans-serif;
      text-transform: uppercase;
      font-weight: normal; }
  header.site-header .mobile-menu-area .grand-child-links > .link-item > a {
    font-family: "GT America Condensed", sans-serif;
    text-transform: uppercase; }

.hamburger-icon {
  width: 22px;
  height: 18px;
  position: relative; }
  .hamburger-icon span {
    display: block;
    border: 1px solid #000000;
    position: absolute;
    width: 100%; }
    .hamburger-icon span:nth-child(1) {
      top: 0; }
    .hamburger-icon span:nth-child(2) {
      top: 50%;
      transform: translateY(-50%); }
    .hamburger-icon span:nth-child(3) {
      bottom: 0; }

.section--featured-products {
  padding: 48px 24px 0; }
  .section--featured-products .featured-products__heading {
    font-family: "GT America Condensed", sans-serif;
    text-transform: uppercase;
    font-weight: 700;
    text-align: center;
    margin-bottom: 24px; }
  .section--featured-products .featured-products__product {
    margin-bottom: 48px; }
    .section--featured-products .featured-products__product .product__image-area {
      position: relative; }
      .section--featured-products .featured-products__product .product__image-area .product__image-overlay {
        background: #ffffff;
        position: absolute;
        width: 100%;
        top: 0;
        bottom: 0;
        opacity: 0;
        transition: opacity .2s; }
      .section--featured-products .featured-products__product .product__image-area:hover .product__image-overlay {
        opacity: .5; }
    .section--featured-products .featured-products__product .product__image {
      margin-bottom: 12px; }
    .section--featured-products .featured-products__product .product__title {
      font-family: "GT America Condensed", sans-serif;
      text-transform: uppercase;
      font-weight: 700;
      font-size: 14px; }

.section--hero {
  height: calc(100vh - 42px);
  position: relative; }
  .section--hero .hero__bg {
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center center;
    height: 100%;
    position: absolute;
    width: 100%; }
  @media screen and (min-width: 640px) {
    .section--hero .hero--mobile__bg {
      display: none; } }
  .section--hero .hero--desktop__bg {
    display: none; }
    @media screen and (min-width: 640px) {
      .section--hero .hero--desktop__bg {
        display: block; } }
  .section--hero .hero__inner {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 1;
    position: relative;
    text-align: center;
    padding: 0 24px; }
  .section--hero .hero__sub-heading {
    font-family: "GT America Condensed", sans-serif;
    text-transform: uppercase;
    font-weight: 700;
    font-size: 16px;
    margin-bottom: 24px;
    line-height: 1; }
  .section--hero .hero__heading {
    font-family: "GT America Condensed", sans-serif;
    text-transform: uppercase;
    font-weight: 700;
    font-size: 42px;
    margin-bottom: 36px;
    line-height: 1; }
  .section--hero .hero__description {
    margin-bottom: 36px; }
    .section--hero .hero__description p {
      line-height: 24px; }
  .section--hero .hero__cta {
    font-family: "GT America Expanded", sans-serif;
    text-transform: uppercase;
    font-size: 12px;
    line-height: 34px;
    display: inline-block;
    border: 1px solid transparent;
    padding: 0 55px; }
    .section--hero .hero__cta::hover {
      color: #000000; }

.section--icon-info-list .icon-info-list__item-area {
  display: flex; }


