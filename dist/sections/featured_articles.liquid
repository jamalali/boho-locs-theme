<div class="articles-list esc-carousel container" data-carousel='{
      "centerMode": true,
      "centerPadding": "48px",
      "infinite": false,
      "arrows": false,
      "mobileFirst": true,
      "arrows": false,
      "destroyAt": 768
  }'>
  {% for block in section.blocks %}
      
      {% render 'card_article',
          article             : articles[block.settings.article],
          block_attributes    : block.shopify_attributes
      %}

  {% endfor %}
</div>

{% schema %}
  {
    "name": "Featured Articles",
    "class": "section--featured-articles",
    "tag": "section",
    "blocks": [
      {
        "type": "article",
        "name": "Article",
        "limit": 3,
        "settings": [
          {
            "type": "article",
            "id": "article",
            "label": "Article"
          }
        ]
      }
    ],
    "presets": [
        {
            "name": "Featured Articles",
            "category": "Boho Sections"
        }
    ]
  }
{% endschema %}