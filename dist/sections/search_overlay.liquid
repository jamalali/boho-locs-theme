<div class="top">
    <a href="#" class="search-overlay-toggle">
        {% render 'icon_times' %}
    </a>
</div>

<div class="search-overlay__form-area">
    {% render 'form_search' %}
</div>

<div class="featured-products-area">

    <h2 class="featured-products__heading">
        {{ section.settings.featured_products_heading }}
    </h2>

    <div class="featured-products__list slick-slider" data-slick='{
            "centerMode": true,
            "centerPadding": "24px",
            "arrows": false,
            "infinite": false,
            "mobileFirst": true,
            "responsive": [
                {
                    "breakpoint": 767,
                    "settings": "unslick"
                }
            ]
        }'>

        {% for block in section.blocks %}
            {% if block.type == 'featured_products' %}

                {% render 'block--product',
                    product             : all_products[block.settings.product],
                    block_attributes    : block.shopify_attributes
                %}

            {% endif %}
        {% endfor %}

    </div>

</div>

<div class="featured-articles-area">

    <h2 class="featured-articles__heading">
        {{ section.settings.featured_articles_heading }}
    </h2>

    <div class="featured-articles__list slick-slider" data-slick='{
            "centerMode": true,
            "centerPadding": "24px",
            "arrows": false,
            "infinite": false,
            "mobileFirst": true,
            "responsive": [
                {
                    "breakpoint": 767,
                    "settings": "unslick"
                }
            ]
        }'>

        {% for block in section.blocks %}
            {% if block.type == 'featured_articles' %}

                {% render 'block--article',
                    article             : articles[block.settings.article],
                    block_attributes    : block.shopify_attributes
                %}

            {% endif %}
        {% endfor %}

    </div>

</div>

{% schema %}
  {
    "name": "Search Overlay",
    "class": "section--search-overlay",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "featured_products_heading",
        "label": "Featured Products Heading"
      },
      {
        "type": "text",
        "id": "featured_articles_heading",
        "label": "Featured Articles Heading"
      }
    ],
    "blocks": [
      {
        "type": "featured_products",
        "name": "Featured Products",
        "settings": [
          {
            "id": "product",
            "type": "product",
            "label": "Product"
          }
        ]
      },
      {
        "type": "featured_articles",
        "name": "Featured Articles",
        "settings": [
          {
            "id": "article",
            "type": "article",
            "label": "Article"
          }
        ]
      }
    ]
  }
{% endschema %}