{% assign article = articles[section.settings.article] %}

<div class="featured-article__image">
    <img src="{{ article.image | img_url: '1024x' }}" alt="{{ article.title }}" />
</div>

<div class="featured-article__content">

    {% assign words = article.url | split: '/' %}
    {% assign category_handle = words[2] %}
    {% assign article_blog = blogs[category_handle] %}

    <h3 class="featured-article__category">
        <a href="{{ article_blog.url }}">
            {{ article_blog.title }}
        </a>
    </h3>

    <h2 class="featured-article__title">
        <a href="{{ article.url }}">
            {{ article.title }}
        </a>
    </h2>

    <p class="featured-aritcle__date-author">
        {{ article.published_at | date: "%B %e, %Y" }} - {{ article.author }}
    </p>

</div>

<style>
#shopify-section-{{ section.id }} {
    background-color: #e4d9d5;
  }
</style>

{% schema %}
  {
    "name": "Featured Article",
    "class": "section--featured-article",
    "tag": "section",
    "settings": [
        {
            "type": "article",
            "id": "article",
            "label": "Article"
        }
    ],
    "presets": [
        {
            "name": "Featured Article",
            "category": "Boho Sections"
        }
    ]
  }
{% endschema %}