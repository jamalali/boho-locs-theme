<header class="site-header">

    <div class="inner">

        <div class="left-area">
            <a href="#" class="mobile-menu-toggle">
                <div class="hamburger-icon">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </a>
        </div>

        <a href="/" class="logo-area">
            {% if section.settings.logo != nil %}
                <img class="logo" src="{{ section.settings.logo | img_url: 'master' }}" alt="Boho Locs Logo" />
            {% else %}
                Home
            {% endif %}
        </a>

        <div class="right-area">
            <a href="#" class="search-link">
                {% render 'icon_search' %}
            </a>
            <a href="/cart" class="cart-link">
                {% render 'icon_shopping_bag' %}
            </a>
        </div>

    </div>

    {% render 'mobile_menu' %}

</header>

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      }
    ]
  }
{% endschema %}