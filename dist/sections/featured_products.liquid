<div class="section__inner section--{{ section.settings.theme }}">

    {% if section.settings.heading != blank %}
      <h2 class="featured-products__heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="featured-products__products slick-slider" data-slick='{
            "centerMode": true,
            "centerPadding": "24px",
            "arrows": false,
            "infinite": false,
            "mobileFirst": true,
            "responsive": [
                {
                    "breakpoint": 767,
                    "settings": "unslick"
                }
            ]
        }'>
        {% for block in section.blocks %}
            {% assign product = all_products[block.settings.product] %}

            <div class="featured-products__product product" {{ block.shopify_attributes }}>
                <a href="{{ product.url }}">
                    <div class="product__image-area">
                        <div class="product__image-overlay"></div>
                        <img src="{{ product.featured_image | img_url: '500x' }}" alt="{{ product.title }}" class="product__image" />
                    </div>
                    <h3 class="product__title">
                        {{ product.title }}
                    </h3>
                </a>
            </div>
        {% endfor %}
    </div>

</div>

{% schema %}
  {
    "name": "Featured Products",
    "class": "section--featured-products",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "select",
        "id": "theme",
        "options": [
            { "value": "blue", "label": "Blue"},
            { "value": "pink", "label": "Pink"},
            { "value": "red", "label": "Red"},
            { "value": "yellow", "label": "Yellow"}
        ],
        "label": "Theme"
      }
    ],
    "blocks": [
      {
        "type": "products",
        "name": "Products",
        "settings": [
          {
            "id": "product",
            "type": "product",
            "label": "Product"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Featured Products",
        "category": "Boho Sections"
      }
    ]
  }
{% endschema %}