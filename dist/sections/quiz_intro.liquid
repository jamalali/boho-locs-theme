<div class="section__inner">

    {% if section.settings.sub_heading != blank %}
        <h3 class="quiz-intro__sub_heading">
            {{ section.settings.sub_heading }}
        </h3>
    {% endif %}

    {% if section.settings.heading != blank %}
        <h2 class="quiz-intro__heading">
            {{ section.settings.heading }}
        </h2>
    {% endif %}

    {% if section.settings.description != blank %}
        <p class="quiz-intro__description">
            {{ section.settings.description }}
        </p>
    {% endif %}

    {% if section.settings.question != blank %}
        <p class="quiz-intro__question">
            {{ section.settings.question }}
        </p>
    {% endif %}

    <div class="quiz-intro__answers">
        {% for block in section.blocks %}
            {% if block.type == 'answer' %}
                <div class="quiz-intro__answer" {{ block.shopify_attributes }}>
                    {{ block.settings.answer }}
                </div>
            {% endif %}
        {% endfor %}
    </div>

    {% if section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="button quiz-intro__cta"">
            Take the quiz
        </a>
    {% endif %}

</div>

<style>
  #shopify-section-{{ section.id }} {
    background: #c2c2c2;
  }
</style>

{% schema %}
  {
    "name": "Quiz Intro",
    "class": "section--quiz-intro",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "sub_heading",
        "label": "Sub heading"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "text",
        "id": "question",
        "label": "Question"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "blocks": [
      {
        "type": "answer",
        "name": "Answers",
        "limit": 6,
        "settings": [
          {
            "id": "answer",
            "type": "text",
            "label": "Answer"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Quiz Intro",
        "category": "Boho Sections"
      }
    ]
  }
{% endschema %}