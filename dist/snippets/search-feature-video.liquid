<section class="feature-video flex--column">
  <header>
    <h3 class="section-title">
      {{ section.settings.title }}
    </h3>
  </header>
  <div class="video-container flex--row wrap justify--between">
    {% for block in section.blocks %}

      <figure>
        <div class="video-responsive">

          {%- include 'video' -%}

        </div>
        <figcaption>

          {{ block.settings.video_caption }}

        </figcaption>
      </figure>

    {% endfor %}

  </div>
</section>
